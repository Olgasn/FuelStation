@model OperationsViewModel
@{
    ViewData["Title"] = "Операции";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Операции</h2>

@using (Html.BeginForm("Index", "FilteredOperations", FormMethod.Post))
{
    <fieldset>
        Наименование топлива: @Html.TextBox("FuelType", Model.FilterOperationViewModel.FuelType)
        Наименование емкости: @Html.TextBox("TankType", Model.FilterOperationViewModel.TankType)
        <input type="submit" value="Найти" />
    </fieldset>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Operations.FirstOrDefault().Inc_Exp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Operations.FirstOrDefault().Date)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder=@Model.SortViewModel.FuelTypeSort>
                    @Html.DisplayNameFor(model => model.FilterOperationViewModel.FuelType)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder=@Model.SortViewModel.TankTypeSort>
                    @Html.DisplayNameFor(model => model.FilterOperationViewModel.TankType)
                </a>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Operations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Inc_Exp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fuel.FuelType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tank.TankType)
                </td>

            </tr>
        }
    </tbody>
</table>
