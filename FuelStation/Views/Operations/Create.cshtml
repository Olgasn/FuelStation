@model Operation

@{
    ViewData["Title"] = "Создать";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Создать</h2>

<h4>Операция</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FuelID" class="control-label"></label>
                <select asp-for="FuelID" class ="form-control" asp-items="ViewBag.FuelID"></select>
            </div>
            <div class="form-group">
                <label asp-for="TankID" class="control-label"></label>
                <select asp-for="TankID" class ="form-control" asp-items="ViewBag.TankID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Inc_Exp" class="control-label"></label>
                <input asp-for="Inc_Exp" class="form-control" />
                <span asp-validation-for="Inc_Exp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
